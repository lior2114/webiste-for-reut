{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/about",
      "dest": "/index.html"
    },
    {
      "src": "/vacations",
      "dest": "/index.html"
    },
    {
      "src": "/vacations/add",
      "dest": "/index.html"
    },
    {
      "src": "/vacations/edit/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/no-money",
      "dest": "/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
